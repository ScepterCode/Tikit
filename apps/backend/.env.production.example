# Tikit Backend - Production Environment Variables
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
PORT=3001

# Database
DATABASE_URL=postgresql://user:password@host:5432/tikit?schema=public&connection_limit=10&pool_timeout=20

# Redis
REDIS_URL=redis://host:6379
REDIS_PASSWORD=your-redis-password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# Firebase
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Payment Gateways
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key_here
FLUTTERWAVE_SECRET_KEY=FLWSECK-your_flutterwave_secret_key_here
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_public_key_here

# Africa's Talking (SMS & USSD)
AFRICAS_TALKING_API_KEY=your-api-key
AFRICAS_TALKING_USERNAME=your-username
AFRICAS_TALKING_SENDER_ID=TIKIT
USSD_SHORT_CODE=*7477#

# WhatsApp Business API
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=your-permanent-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# CORS
CORS_ORIGIN=https://tikit.ng
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX_REQUESTS=10
RATE_LIMIT_PAYMENT_MAX_REQUESTS=10

# Session
SESSION_SECRET=your-session-secret-minimum-32-characters
SESSION_MAX_AGE=86400000

# Monitoring & Logging
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
LOG_LEVEL=info

# CDN
CDN_URL=https://cdn.tikit.ng

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@tikit.ng
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=Tikit <noreply@tikit.ng>

# Feature Flags
ENABLE_USSD=true
ENABLE_WHATSAPP=true
ENABLE_AIRTIME_PAYMENT=true
ENABLE_SPONSORSHIP=true
ENABLE_GROUP_BUY=true
ENABLE_BULK_BOOKING=true

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Security
BCRYPT_ROUNDS=12
OTP_EXPIRY_MINUTES=5
MAX_OTP_ATTEMPTS=3
ACCOUNT_LOCK_DURATION_MINUTES=30
