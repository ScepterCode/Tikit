# Production Environment Configuration for Tikit Frontend
# This file contains production-ready environment variables

# Backend API URL - Update this to your deployed backend URL
# For Render deployment, it will be: https://tikit-backend.onrender.com
# For Railway: https://your-app.railway.app
# For Vercel Functions: https://your-vercel-app.vercel.app/api
# For Supabase-only mode, this can be left as localhost (will be ignored)
VITE_API_URL=http://localhost:4000

# Supabase Configuration for Production
# Replace with your actual Supabase project details
# Get these from: https://supabase.com/dashboard/project/your-project/settings/api
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# App Configuration
VITE_APP_NAME=Tikit
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production

# Feature Flags for Production
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true

# Payment Configuration (Public Keys Only)
VITE_PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key_here
VITE_FLUTTERWAVE_PUBLIC_KEY=FLWPUBK-your_flutterwave_public_key_here

# USSD Configuration
VITE_USSD_SHORT_CODE=*7477#

# CDN Configuration
VITE_CDN_URL=https://cdn.tikit.ng

# Security
VITE_ENABLE_HTTPS_ONLY=true
VITE_ENABLE_STRICT_CSP=true